<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffee">

    <!--  Permissions for internet, camera and storage(used for pictures)  -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CoffeeActivity"
            android:label="@string/title_activity_coffee"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.fragments.coffee_fragment.add_coffee_activity.AddCoffeeActivity"
            android:label="@string/title_activity_add_coffee"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.fragments.coffee_fragment.update_coffee_activity.UpdateCoffeeActivity"
            android:label="@string/title_activity_update_coffee"
            android:theme="@style/AppTheme" />
    </application>

</manifest>